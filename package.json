  "license": "ISC",
  "dependencies": {
    "babel": "^5.4.7",
    "body-parser": "^1.12.4",
    "compression": "^1.4.4",
    "cookie-parser": "^1.3.5",
    "express": "^4.12.4",
    "express-logger": "0.0.3",
    "express-session": "^1.11.2",
    "method-override": "^2.3.3",
    "mongoose": "^4.0.4",
    "nodemon": "^1.3.7",
    "passport": "^0.2.2",
    "passport-local": "^1.0.0",
    "req-flash": "0.0.2",
    "swig": "^1.4.2"
  },
  "devDependencies": {
    "babel-eslint": "^3.1.9",
    "browser-sync": "^2.7.6",
    "chai": "^2.3.0",
    "eslint": "^0.22.1",
    "mocha": "^2.2.5",
    "morgan": "^1.5.3",
    "parallelshell": "^1.1.1",
    "sinon": "^1.14.1",
    "sinon-chai": "^2.7.0",
    "supertest": "^1.0.1"
  }
